---
import ThemeIcon from "./ThemeIcon.astro";
---

<header
  class="flex justify-between bg-neutral-900 text-white border-b-[1px] px-3 py-2"
>
  <div class="flex items-center gap-x-1">
    <div class="h-4 w-4 bg-white rounded-sm text-sm"></div>
    Sanstream
  </div>
  <form action="placeholder">
    <input
      class="border-2"
      type="text"
      placeholder="Categoria, Nombre del cana"
    />
    <button class=" bg-neutral-600 rounded-sm px-2">Buscar</button>
  </form>
  <div class="flex gap-x-2 items-center justify-center">
    <button class="bg-gray-400 rounded-md px-2 py-1 text-sm text-white"
      >Log in</button
    >
    <butto class="bg-red-300 rounded-md px-2 py-1 text-sm">Sign Up</butto>
    <ThemeIcon />
  </div>
</header>
